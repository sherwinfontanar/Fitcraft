<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/measurement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Body Measurements"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Two-column section for Bust, Waist, Hips, Shoulder Width -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Bust -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Bust"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold" />

                <EditText
                    android:id="@+id/bustValue"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16dp"
                    android:background="@drawable/edit_text_background"
                    android:padding="8dp"
                    android:enabled="false"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <!-- Waist -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Waist"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold" />

                <EditText
                    android:id="@+id/waistValue"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16dp"
                    android:padding="8dp"
                    android:enabled="false"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <!-- Hips -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Hips"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold" />

                <EditText
                    android:id="@+id/hipsValue"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16dp"
                    android:padding="8dp"
                    android:enabled="false"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <!-- Shoulder Width -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Shoulder Width"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold" />

                <EditText
                    android:id="@+id/shoulderValue"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16dp"
                    android:padding="8dp"
                    android:enabled="false"
                    android:inputType="numberDecimal" />
            </LinearLayout>
        </GridLayout>

        <!-- Single-column fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <!-- Sleeve Length -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Sleeve Length"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold" />

            <EditText
                android:id="@+id/sleeveValue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_background"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16dp"
                android:padding="8dp"
                android:enabled="false"
                android:inputType="numberDecimal" />

            <!-- Neck to Waist -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Neck to Waist"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/neckToWaistValue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_background"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16dp"
                android:padding="8dp"
                android:enabled="false"
                android:inputType="numberDecimal" />

            <!-- Waist to Hem -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Waist to Hem"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/waistToHemValue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_background"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16dp"
                android:padding="8dp"
                android:enabled="false"
                android:inputType="numberDecimal" />

            <!-- Body Type -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Body Type"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/bodyTypeValue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_background"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16dp"
                android:padding="8dp"
                android:enabled="false"
                android:inputType="text" />

            <!-- Skin Color -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Skin Color"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/skinColorValue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_background"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16dp"
                android:padding="8dp"
                android:enabled="false"
                android:inputType="text" />
        </LinearLayout>

        <!-- Save Button -->
        <Button

            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Save"
            android:enabled="false"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16dp"/>
    </LinearLayout>
</ScrollView>
