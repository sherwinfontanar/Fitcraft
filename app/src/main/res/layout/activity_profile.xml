<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header with Profile Info -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/two"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="4dp"
                    android:src="@drawable/profile"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juana Cruz"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:fontFamily="@font/poppins_bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/four"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:paddingHorizontal="0dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/four"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- My Purchases Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="My Purchases"
                            android:textColor="@color/one"
                            android:textSize="20sp"
                            android:fontFamily="@font/poppins_semibold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_view_history"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View History"
                            android:textColor="@color/one"
                            android:textSize="14sp"
                            style="@style/Widget.MaterialComponents.Button.TextButton" />
                    </LinearLayout>

                    <!-- Purchases Categories -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <!-- To Pay -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_to_pay"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:rippleColor="@color/white">

                            <LinearLayout
                                android:id="@+id/purchasesContainer1"
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/rounded">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/wallet"
                                    app:tint="@color/white" />

                                <TextView
                                    android:id="@+id/toPay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="To Pay"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_marginTop="8dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <View
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <!-- To Ship -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_to_ship"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:rippleColor="@color/white">

                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/rounded">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ship"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="To Ship"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_marginTop="8dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <View
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <!-- To Receive -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_to_receive"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:rippleColor="@color/white">

                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/rounded">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/receive"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="To Receive"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_marginTop="8dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <View
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <!-- To Rate -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_to_rate"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:rippleColor="@color/white">

                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:background="@drawable/rounded"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/rate"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="To Rate"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- My Wallet Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/threeborder"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="My Wallet"
                        android:textColor="@color/one"
                        android:textSize="20sp" />

                    <!-- Available Balance -->
                    <LinearLayout
                        android:id="@+id/availableBalance"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/edit_text_background"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Available Balance"
                            android:textColor="@color/one"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="₱0.00"
                            android:textColor="@color/one"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <!-- Payment Methods Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Payment Methods"
                            android:textColor="@color/one"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/ll_add_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_background"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="start|center_vertical"
                            android:padding="5dp"
                            android:text="Add Credit/Debit Card"
                            android:textColor="@color/one"
                            android:textSize="16sp"
                            app:icon="@drawable/wallet"
                            app:iconGravity="start"
                            app:iconPadding="16dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_transaction_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/edit_button_background"
                        android:fontFamily="@font/poppins_medium"
                        android:padding="12dp"
                        android:text="Transaction History"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:cornerRadius="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Favorites Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favorites"
                        android:textColor="@color/one"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Example Favorite Item -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/roundedtwo"
                            android:scaleType="centerCrop"
                            android:src="@drawable/top" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/tvFavoriteName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Classic White Shirt"
                                android:textColor="@color/one"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_semibold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tailor: John Smith"
                                android:textColor="@color/two"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_marginTop="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₱890"
                                android:textColor="@color/two"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rounded_dashboard"
        android:orientation="horizontal"
        android:elevation="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/homebutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:clickable="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                android:layout_marginVertical="5dp"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/two"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tailorsbutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginVertical="5dp"
                android:src="@drawable/scissors"
                app:tint="#808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Tailors"
                android:textColor="@color/two"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cartbutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/shoppingcart"
                android:layout_marginVertical="5dp"
                app:tint="#808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/two"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logoutbutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/logout"
                android:layout_marginVertical="5dp"
                app:tint="#808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/two"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>