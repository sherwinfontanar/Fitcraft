<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/lovelie" />

        <ImageButton
            android:id="@+id/btnChangePhoto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@id/profilePic"
            android:layout_alignBottom="@id/profilePic"
            android:background="@drawable/camerabutton"
            android:contentDescription="Change profile picture" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="425dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- First, Middle, Last Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:padding="3dp"
                android:weightSum="3">

                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:hint="First"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14dp"
                    android:textColor="@color/two"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/middleName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:hint="Middle"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14dp"
                    android:textColor="@color/two"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/lastName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:hint="Last"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14dp"
                    android:textColor="@color/two"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Address Fields -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold" />

            <!-- Province + City -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginBottom="8dp"
                android:weightSum="2">

                <EditText
                    android:id="@+id/province"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:layout_height="40dp"
                    android:hint="Province"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14dp"
                    android:textColor="@color/two"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/city"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:hint="City"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14dp"
                    android:textColor="@color/two"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Barangay + Sitio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginBottom="8dp"
                android:weightSum="2">

                <EditText
                    android:id="@+id/barangay"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:layout_height="40dp"
                    android:hint="Barangay"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14dp"
                    android:textColor="@color/two"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/sitio"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:hint="Sitio"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14dp"
                    android:textColor="@color/two"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Street + House/Building No. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:weightSum="2">

                <EditText
                    android:id="@+id/street"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:layout_height="40dp"
                    android:hint="Street"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14dp"
                    android:textColor="@color/two"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/houseNumber"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:hint="House/Building No."
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14dp"
                    android:textColor="@color/two"
                    android:padding="10dp" />
            </LinearLayout>

            <Button
                android:id="@+id/useLocationButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:text="Use Current Location"
                android:fontFamily="@font/poppins_bold"
                android:background="@drawable/rounded"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Email"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"/>

            <EditText
                android:id="@+id/email"
                android:hint="Email"
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14dp"
                android:textColor="@color/two"
                android:padding="10dp" />

            <!-- Phone Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Phone Number"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold" />

            <EditText
                android:id="@+id/phoneNumber"
                android:hint="Phone Number"
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14dp"
                android:textColor="@color/two"
                android:padding="10dp" />

            <!-- Action Buttons -->
            <Button
                android:id="@+id/editButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/roundedtwo"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="Edit" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="Cancel" />

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rounded_dashboard"
        android:orientation="horizontal"
        android:elevation="8dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homebutton"
                android:clickable="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                android:layout_marginVertical="5dp"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/two"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginVertical="5dp"
                android:src="@drawable/scissors"
                app:tint="#808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Tailors"
                android:textColor="@color/two"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/shoppingcart"
                android:layout_marginVertical="5dp"
                app:tint="#808080" />

            <TextView
                android:id="@+id/cartbtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/two"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/logout"
                android:layout_marginVertical="5dp"
                app:tint="#808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/two"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
